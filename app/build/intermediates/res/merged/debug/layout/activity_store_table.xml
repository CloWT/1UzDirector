<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="uz.a1uz.a1uzdirector.Activity.TablesActivitys.StoreTables.StoreTable">
    <ProgressBar

        android:id="@+id/progres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
/>

    <HorizontalScrollView
        android:id="@+id/horizontalView"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_width="wrap_content"
        android:scrollbarStyle="outsideOverlay"
        >
<TableLayout

    android:id="@+id/tableForStore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="0">
    <TableRow android:background="@color/tableTopColor"

        >
        <TextView
            android:text="@string/store"
            android:textSize="@dimen/TableHeaderTextSize"
            android:layout_gravity="center|center_horizontal"
            android:padding="5dip"
            android:textColor="@color/textColor"/>
        <TextView

            android:text="@string/BeginPeriod"
            android:gravity="center"
            android:textSize="@dimen/TableHeaderTextSize"
            android:padding="5dip"
            android:textColor="@color/textColor"
            />
        <TextView

            android:text="@string/InSum"
            android:textSize="@dimen/TableHeaderTextSize"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@color/textColor"
            />
        <TextView

            android:text="@string/OutSum"
            android:textSize="@dimen/TableHeaderTextSize"
            android:gravity="center"
            android:padding="5dip"
            android:textColor="@color/textColor"

            />
        <TextView
            android:text="@string/CurrentSum"
            android:textSize="@dimen/TableHeaderTextSize"
            android:padding="5dip"
            android:textColor="@color/textColor"
            />
    </TableRow>


</TableLayout>
    </HorizontalScrollView>

</LinearLayout>
