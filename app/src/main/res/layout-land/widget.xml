<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/bgc1"
    android:id="@+id/linearLayout"
    android:padding="5dp"


    >
    <GridLayout
        android:layout_width="match_parent"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_height="match_parent"
        >
        <GridLayout


            android:columnCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|center_horizontal|center_vertical"

                android:layout_columnSpan="2"

                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Bank"
                android:id="@+id/TopText"

                />
            <ImageView
                android:src="@drawable/ic_settings_black_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="1dp"
                android:layout_gravity="end"
                android:id="@+id/ImageRight"/>

        </GridLayout>

        <TextView
            android:textSize="35sp"
            android:gravity="center|center_horizontal"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:layout_gravity="center|center_horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ss"
            android:layout_marginTop="25dp"
            android:id="@+id/MiddleText"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:layout_gravity=""
            >
            <Spinner
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="4"
                android:visibility="visible"
                android:id="@+id/left_spinner"

                />
            <LinearLayout android:layout_row="0"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_bottom_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdfasdfasdfasdf3"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                    android:id="@+id/BottomLeftText"
                    android:visibility="visible"

                    />
                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:visibility="invisible"
                    android:id="@+id/left_spin_img"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_row="0"
                android:layout_column="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_bottom_layout"


                    >
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfasdfasdfasdf3"
                        android:textColor="@color/textColor"
                        android:id="@+id/BottomRightText"
                        android:layout_gravity="end"
                        android:gravity="end"

                        />
                    <ImageButton
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_marginTop="0dp"
                        android:visibility="invisible"
                        android:id="@+id/right_spin_img"
                        />
                </LinearLayout>
                <Spinner
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/right_spinner"
                    android:text="4"></Spinner>
            </LinearLayout>


    </GridLayout>
    </GridLayout>

        </LinearLayout>
