<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"

    ><TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/tableTopColor"
    android:text="@string/chooseColor"/>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<Button
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="@color/bgc1"
    android:layout_margin="2dp"
    android:id="@+id/color1"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/bgc2"
        android:layout_margin="2dp"
        android:id="@+id/color2"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/bgc3"
        android:layout_margin="2dp"
        android:id="@+id/color3"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/bgc4"
        android:layout_margin="2dp"
        android:id="@+id/color4"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/bgc5"
        android:layout_margin="2dp"
        android:id="@+id/color5"/>
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/bgc6"
        android:layout_margin="2dp"
        android:id="@+id/color6"/>
</LinearLayout>



</LinearLayout>