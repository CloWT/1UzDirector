<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgc1"
    android:id="@+id/linearLayout"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
        android:rowCount="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Банк"
            android:id="@+id/TopText"

            />
        <ImageView
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="1dp"
            android:id="@+id/ImageRight"/>
    </GridLayout>
            <TextView
        android:textSize="35dp"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="111121212"
        android:layout_marginTop="25dp"
        android:id="@+id/MiddleText"
        />
            <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <Spinner
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:visibility="visible"
            android:id="@+id/left_spinner"

            />
        <LinearLayout android:layout_row="0"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_bottom_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdfasdfasdfasdf3"
                android:textColor="@color/textColor"
                android:textSize="15dp"
                android:id="@+id/BottomLeftText"
                android:visibility="visible"

                />
            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:visibility="invisible"
                android:id="@+id/left_spin_img"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_row="0"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_bottom_layout"


                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdfasdfasdfasdf3"
                    android:textColor="@color/textColor"
                    android:id="@+id/BottomRightText"
                    android:layout_gravity="right"
                    android:gravity="right"

                    />
                <ImageButton
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_marginTop="0dp"
                    android:visibility="invisible"
                    android:id="@+id/right_spin_img"
                    />
            </LinearLayout>
            <Spinner
                android:layout_row="0"
                android:layout_column="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/right_spinner"
                android:text="4"></Spinner>
        </LinearLayout>


    </GridLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>