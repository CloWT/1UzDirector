<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uz.a1uz.a1uzdirector.Activity.TablesActivitys.BankTables.BankBankReport"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Schet"/>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SchetSpin">
        </Spinner>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ReportAcutal"
            android:background="#f2dede"
            android:textColor="@color/red"
            android:id="@+id/dateReport_text" />

    </LinearLayout>
    <ProgressBar
        android:padding="25dp"
        android:id="@+id/progres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/layout"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:layout_width="match_parent"
        android:scrollbarStyle="insideInset"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:layout_width="wrap_content"
            >
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tableForBank"
                android:stretchColumns="0"
                android:padding="3dp">
                <TableRow android:background="@color/tableTopColor"

                    >
                    <TextView
                        android:text="@string/Subkonto"
                        android:gravity="center|center_horizontal"
                        android:padding="5dip"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:textColor="@color/textColor"/>
                    <TextView

                        android:text="@string/yesterday"
                        android:id="@+id/lastDay"
                        android:gravity="center"
                        android:padding="5dip"
                        android:onClick="cLastDay"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:textColor="@color/textColor"
                        />
                    <TextView

                        android:text="@string/thisWeek"
                        android:gravity="center"
                        android:id="@+id/thisWeek"
                        android:padding="5dip"
                        android:onClick="cThisWeek"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:textColor="@color/textColor"
                        />
                    <TextView

                        android:text="@string/LastWeek"
                        android:gravity="center"
                        android:id="@+id/LastWeek"
                        android:onClick="cLastWeek"
                        android:padding="5dip"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:textColor="@color/textColor"

                        />
                    <TextView
                        android:text="@string/ThisMonth"
                        android:padding="5dip"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:id="@+id/thisMonth"
                        android:onClick="cThisMonth"
                        android:textColor="@color/textColor"
                        />
                    <TextView
                        android:text="@string/LastMonth"
                        android:padding="5dip"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:id="@+id/lastMonth"
                        android:onClick="cLastMonth"
                        android:textColor="@color/textColor"
                        />
                    <TextView
                        android:text="@string/Beginyear"
                        android:padding="5dip"
                        android:textSize="@dimen/TableHeaderTextSize"
                        android:id="@+id/thisYear"
                        android:onClick="cThisyear"
                        android:textColor="@color/textColor"
                        />
                </TableRow>

                <TableRow android:background="@color/textColor"
                    >
                    <TextView
                        android:text="@string/inBeginPeriod"
                        android:gravity="start|center_horizontal"
                        android:padding="5dp"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:background="@drawable/border_shape"
                        android:textColor="@color/blue"
                        />
                    <TextView
                        android:id="@+id/BPLastDay"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastDay"
                        android:gravity="end"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/BPThisWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisWeek"
                        android:gravity="end"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/BPLastWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastWeek"
                        android:gravity="end"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"

                        />
                    <TextView
                        android:id="@+id/BPThisMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisMonth"
                        android:gravity="end"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/BPLastMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastMonth"
                        android:gravity="end"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/BPThisYearBegin"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisyear"
                        android:gravity="end"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                </TableRow>

                <TableRow android:background="@color/textColor"

                    >
                    <TextView
                        android:text="@string/Prihod"
                        android:gravity="start|center_horizontal"
                        android:padding="5dip"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:background="@drawable/border_shape"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:id="@+id/INLastDay"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastDay"
                        android:gravity="end"
                        android:padding="5dip"
                        android:textColor="@color/bgc3"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/INThisWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisWeek"
                        android:gravity="end"
                        android:padding="5dip"
                        android:textColor="@color/bgc3"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/INLastWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastWeek"
                        android:gravity="end"
                        android:padding="5dip"
                        android:textColor="@color/bgc3"
                        android:background="@drawable/border_shape"

                        />
                    <TextView
                        android:id="@+id/INThisMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisMonth"
                        android:gravity="end"
                        android:padding="5dip"
                        android:textColor="@color/bgc3"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/INLastMonth"
                        android:text="@string/pusto"
                        android:onClick="cLastMonth"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:gravity="end"
                        android:padding="5dip"
                        android:textColor="@color/bgc3"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/INThisYearBegin"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisyear"
                        android:gravity="end"
                        android:padding="5dip"
                        android:textColor="@color/bgc3"
                        android:background="@drawable/border_shape"
                        />
                </TableRow>

                <TableRow android:background="@color/textColor"

                    >
                    <TextView
                        android:text="@string/Rasxod"
                        android:gravity="left"
                        android:padding="5dip"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:background="@drawable/border_shape"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:id="@+id/OutLastDay"
                        android:text="@string/pusto"
                        android:onClick="cLastDay"
                        android:gravity="right"
                        android:padding="5dip"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:textColor="@color/bgc4"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/OutThisWeek"
                        android:text="@string/pusto"
                        android:onClick="cThisWeek"
                        android:gravity="right"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:padding="5dip"
                        android:textColor="@color/bgc4"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/OutLastWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastWeek"
                        android:gravity="right"
                        android:padding="5dip"
                        android:textColor="@color/bgc4"
                        android:background="@drawable/border_shape"

                        />
                    <TextView
                        android:id="@+id/OutThisMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisMonth"
                        android:gravity="right"
                        android:padding="5dip"
                        android:textColor="@color/bgc4"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/OutLastMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastMonth"
                        android:gravity="right"
                        android:padding="5dip"
                        android:textColor="@color/bgc4"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/OutThisYearBegin"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisyear"
                        android:gravity="right"
                        android:padding="5dip"
                        android:textColor="@color/bgc4"
                        android:background="@drawable/border_shape"
                        />
                </TableRow>

                <TableRow android:background="@color/textColor"

                    >
                    <TextView
                        android:text="@string/inEndPeriod"
                        android:gravity="left"
                        android:padding="5dip"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:background="@drawable/border_shape"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:id="@+id/LPLastDay"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastDay"
                        android:gravity="right"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/LPThisWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisWeek"
                        android:gravity="right"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/LPLastWeek"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastWeek"
                        android:gravity="right"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"

                        />
                    <TextView
                        android:id="@+id/LPThisMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisMonth"
                        android:gravity="right"

                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/LPLastMonth"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cLastMonth"
                        android:gravity="right"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                    <TextView
                        android:id="@+id/LPThisYearBegin"
                        android:text="@string/pusto"
                        android:textSize="@dimen/TableBodyTextSize"
                        android:onClick="cThisyear"
                        android:gravity="right"
                        android:padding="5dip"
                        android:background="@drawable/border_shape"
                        />
                </TableRow>



            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
