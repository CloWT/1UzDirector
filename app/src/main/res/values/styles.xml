<resources>

    <!-- Base application theme. -->
    <style name="AppThemess" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg2</item>
        <item name="android:progressDrawable">@drawable/progressbarcust</item>

    </style>
    <!---->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>
    <style name="ProgressBar"> parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbarcust</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">#0049c0</item>
    </style>
    <!-- -->

    <style name="DDA" parent="android:Theme.DeviceDefault">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/bg2</item>
    </style>
    <style name="CustomAlertDialogStyle">

        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>
    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">#F00</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/button_background_gradient</item>

    </style>

</resources>
